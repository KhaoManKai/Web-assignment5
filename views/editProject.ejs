<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit <%= project.title %> - Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', {page: ''}) %>

    <div class="container mx-auto">
        <div class="hero bg-base-200">
            <div class="hero-content text-center">
                <div>
                    <h1 class="text-5xl font-bold">Edit Project</h1>
                    <p class="py-6">Editing: <%= project.title %></p>
                </div>
            </div>
        </div>

        <div class="p-6">
            <form method="POST" action="/solutions/editProject" class="max-w-2xl mx-auto">
                <input type="hidden" name="id" value="<%= project.id %>" />
                
                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text">Title</span>
                    </label>
                    <input type="text" name="title" required class="input input-bordered w-full" 
                           value="<%= project.title %>" />
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Featured Image URL</span>
                    </label>
                    <input type="url" name="feature_img_url" required class="input input-bordered w-full" 
                           value="<%= project.feature_img_url %>" />
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Sector</span>
                    </label>
                    <select name="sector_id" required class="select select-bordered w-full">
                        <% sectors.forEach(sector => { %>
                            <option value="<%= sector.id %>" 
                                    <%= (project.sector_id == sector.id) ? "selected" : "" %>>
                                <%= sector.sector_name %>
                            </option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Short Summary</span>
                    </label>
                    <textarea name="summary_short" required 
                              class="textarea textarea-bordered h-24"><%= project.summary_short %></textarea>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Introduction</span>
                    </label>
                    <textarea name="intro_short" required 
                              class="textarea textarea-bordered h-32"><%= project.intro_short %></textarea>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Impact</span>
                    </label>
                    <textarea name="impact" required 
                              class="textarea textarea-bordered h-32"><%= project.impact %></textarea>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Original Source URL</span>
                    </label>
                    <input type="url" name="original_source_url" required class="input input-bordered w-full" 
                           value="<%= project.original_source_url %>" />
                </div>

                <div class="flex justify-between mt-6">
                    <button type="submit" class="btn btn-primary">Update Project</button>
                    <a href="/solutions/deleteProject/<%= project.id %>" 
                       class="btn btn-error" 
                       onclick="return confirm('Are you sure you want to delete this project?')">
                        Delete Project
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>