<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %> - Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', {page: ''}) %>

    <div class="container mx-auto">
        <div class="hero bg-base-200">
            <div class="hero-content text-center">
                <div>
                    <h1 class="text-5xl font-bold"><%= project.title %></h1>
                    <p class="py-6">Below, you will find detailed information about the project: <%= project.title %></p>
                </div>
            </div>
        </div>

        <!-- Project Details -->
        <div class="p-6">
            <div class="card lg:card-side bg-base-100 shadow-xl">
                <figure><img src="<%= project.feature_img_url %>" alt="<%= project.title %>"></figure>
                <div class="card-body">
                    <h2 class="card-title">Introduction</h2>
                    <p><%= project.intro_short %></p>
                    
                    <h2 class="card-title mt-4">Impact</h2>
                    <p><%= project.impact %></p>
                    
                    <div class="card-actions mt-4">
                        <a href="<%= project.original_source_url %>" target="_blank" class="btn btn-primary">Learn More</a>
                        <a href="#" onclick="history.back(); return false;" class="btn">Back</a>
                    </div>
                </div>
            </div>

            <div class="mt-8 card bg-base-100 shadow-xl">
                <div class="card-body">
                    <h2 class="card-title">Random Quote</h2>
                    <blockquote id="quote" class="italic">Loading quote...</blockquote>
                    <p id="author" class="text-right font-bold">...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
    document.addEventListener("DOMContentLoaded", () => {
        fetch('https://dummyjson.com/quotes/random')
            .then(res => res.json())
            .then(data => {
                document.getElementById('quote').textContent = `"${data.quote}"`;
                document.getElementById('author').textContent = `- ${data.author}`;
            })
            .catch(err => {
                document.getElementById('quote').textContent = "Failed to load quote";
                document.getElementById('author').textContent = "";
            });
    });
    </script>
</body>
</html>