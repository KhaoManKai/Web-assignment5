<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Project - Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', {page: '/solutions/addProject'}) %>

    <div class="container mx-auto">
        <div class="hero bg-base-200">
            <div class="hero-content text-center">
                <div>
                    <h1 class="text-5xl font-bold">Add Project</h1>
                    <p class="py-6">Create a new climate solution project</p>
                </div>
            </div>
        </div>

        <div class="p-6">
            <form method="POST" action="/solutions/addProject" class="max-w-2xl mx-auto">
                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text">Title</span>
                    </label>
                    <input type="text" name="title" required class="input input-bordered w-full" />
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Featured Image URL</span>
                    </label>
                    <input type="url" name="feature_img_url" required class="input input-bordered w-full" />
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Sector</span>
                    </label>
                    <select name="sector_id" required class="select select-bordered w-full">
                        <option value="">Select a sector</option>
                        <% sectors.forEach(sector => { %>
                            <option value="<%= sector.id %>"><%= sector.sector_name %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Short Summary</span>
                    </label>
                    <textarea name="summary_short" required class="textarea textarea-bordered h-24"></textarea>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Introduction</span>
                    </label>
                    <textarea name="intro_short" required class="textarea textarea-bordered h-32"></textarea>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Impact</span>
                    </label>
                    <textarea name="impact" required class="textarea textarea-bordered h-32"></textarea>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Original Source URL</span>
                    </label>
                    <input type="url" name="original_source_url" required class="input input-bordered w-full" />
                </div>

                <div class="form-control w-full mt-6">
                    <button type="submit" class="btn btn-primary">Add Project</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>